      </httpProtocol>
    </system.webServer>
  </location>
  <system.web>
    <customErrors mode="Off" />
    <httpHandlers>
      <add path="lbr-api*" type="ServiceStack.HttpHandlerFactory, ServiceStack" verb="*" />
